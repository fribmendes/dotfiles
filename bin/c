#!/usr/local/bin/zsh

typeset -A websites

websites=(
  sem semaphoreci.com
  gh github.com
  github github.com
  fb facebook.com
  ig instagram.com
  msg messenger.com
  so stackoverflow.com
  rd reddit.com
  yt youtube.com
  amz amazon.co.uk
  med medium.com
  pkt getpocket.com
)

location=${websites[$1]:-$1}

osascript <<EOF
  tell application "Google Chrome"
    open location "http://$location"

    activate
    windows where name contains "Google Chrome"
  end tell
EOF
