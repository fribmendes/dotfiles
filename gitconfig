[branch]
  autosetuprebase = always
[color]
  ui = true
[core]
  editor = nvim -f
  pager = less
  excludesfile = /Users/frm/.gitignore_global
[credential]
  helper = cache --timeout=3600
[push]
  default = current
[diff]
  tool = nvimdiff
[difftool]
  prompt = true
[difftool "nvimdiff"]
  cmd= "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
  a = add
  ac = !git.autoclean # See bin/git.autoclean
  b = branch -a -v
  c = commit -S
  co = checkout
  ca = commit --ammend
  cfg = config --list
  conflicts = diff --name-only --diff-filter=U
  d = diff
  dc = diff --cached
  dt = difftool
  f = fetch
  l = log
  m = merge
  p = push
  pl = pull
  pt = push origin --tags
  r = remote -v
  ra = remote add
  rb = rebase
  sh = show --pretty
  ss = status -s
  st = status
  sta = stash apply
  std = stash drop
  sts = stash save
  sync = !git.sync # See bin/git.sync
  t = tag
  tree = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  j
  wc = whatchanged -p --abbrev-commit --pretty
  ctags = !.git/hooks/ctags
[init]
  templatedir = ~/.git_template
