#Including colors
source $FRM_BASH/colors
source $FRM_SCRIPTS/git-prompt.sh

alias GIT='__git_ps1 %s'

# Placeholders
TIMESTAMP=$LIGHT_GRAY
AT=$YELLOW
HOST=$GREEN
DIR=$YELLOW
GIT_CLR=$GREEN
TXT=$WHITE
SEP=$RED
CL='\[\e[0m\]'

setup_ps1() {
    export PS1="\n\u@\H$CL $DIR(\w)$CL: $GIT_CLR[$(GIT)]$CL\n    $SEP $ $CL$GREEN>$CL "
}